<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="com.sktelecom.showme.Main.my.level.LevelBodyVM" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F2EE"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@android:drawable/ic_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="LEVEL"
                android:textColor="#000000"
                android:textSize="20dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="Artist Name"
            android:textColor="#000000"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/rrMain"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:background="#F3F2EE">

            <RelativeLayout
                android:id="@+id/rlMyImg"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/btn_white_round"
                android:elevation="4dp"
                android:gravity="center"
                android:stateListAnimator="@anim/elevation_lower">

                <ImageView
                    android:id="@+id/ivMyImg"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


            <com.sktelecom.showme.base.view.animation.Circle
                android:id="@+id/circle"
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:text="Level : 10"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="POWER : 10000"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="Vote : 10회 /매일 "
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>
</layout>